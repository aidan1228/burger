<h1>EAT-DA-BURGER!!</h1>

<h2>TO EAT!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>EATEN!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block sleep=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger desc.: </label>
    <input type="text" id="ca" name="desc">
  </div>
  <button type="submit">Add Burger</button>
</form>
